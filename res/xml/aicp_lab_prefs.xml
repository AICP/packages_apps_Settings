<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        android:title="@string/aicp_settings_title">

    <!-- HALO -->
  <PreferenceScreen
        android:id="@+id/halo_settings"
        android:fragment="com.android.settings.paranoid.Halo"
        android:icon="@drawable/ic_settings_halo"
        android:title="@string/halo_settings_title" />

    <!-- OmniSwitch -->
  <PreferenceScreen
        android:id="@+id/omniswitch"
        android:icon="@drawable/ic_settings_omniswitch"
        android:title="@string/omniswitch_settings_title" >
        <intent
            android:action="android.intent.action.MAIN"
            android:targetPackage="org.omnirom.omniswitch"
            android:targetClass="org.omnirom.omniswitch.SettingsActivity" />
    </PreferenceScreen>

    <!-- Display and Animations -->
    <PreferenceScreen
        android:id="@+id/disp_anim_settings"
        android:icon="@drawable/ic_settings_display_animations"
        android:title="@string/disp_anim_settings_title"
        android:fragment="com.android.settings.aicp.DisplayAnimationsSettings" />

    <!-- Active Notifications -->
    <PreferenceScreen
        android:id="@+id/active_notifications"
        android:icon="@drawable/ic_settings_actived"
        android:title="@string/Lockscreen_notifications_header"
        android:fragment="com.android.settings.ActiveNotifications" />

    <!-- WakeLock blocker -->
    <PreferenceScreen
        android:id="@+id/wakelock_blocker"
        android:icon="@drawable/ic_settings_wakelock_blocker"
        android:title="@string/wakelock_blocker"
        android:fragment="com.android.settings.aicp.WakeLockBlocker" />

    <!-- SlimSizer -->
    <PreferenceScreen
        android:id="@+id/system_app_remover"
        android:icon="@drawable/ic_settings_slim_sizer"
        android:title="@string/system_app_remover"
        android:fragment="com.android.settings.slim.SystemappRemover" />

</PreferenceScreen>
