<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/carrier_label_title"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

        <Preference
            android:key="custom_carrier_label"
            android:title="@string/custom_carrier_label_title" />

        <CheckBoxPreference
            android:key="notification_show_wifi_ssid"
            android:title="@string/notification_show_wifi_ssid_title"
            android:summary="@string/notification_show_wifi_ssid_summary"
            android:defaultValue="false" />

        <CheckBoxPreference
            android:key="toggle_carrier_logo"
            android:title="@string/disable_carrier_logo" />

         <CheckBoxPreference 
            android:key="pref_notification_shortcuts_hide_carrier"
            android:title="@string/hide_carrier_title" />

         <CheckBoxPreference
            android:key="status_bar_carrier"
            android:title="@string/show_status_bar_carrier_title"
            android:summary="@string/show_status_bar_carrier_summary"
            android:defaultValue="false" />

          <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="status_bar_carrier_color"
            android:title="@string/status_bar_carrier_color"
            android:defaultValue="0xffffffff"
            android:dependency="status_bar_carrier" />

</PreferenceScreen>
