<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Notification drawer -->
    <PreferenceScreen
        android:key="notification_drawer"
        android:fragment="com.android.settings.cyanogenmod.NotificationDrawerSettings"
        android:title="@string/notification_drawer_title" />

    <!-- Display and Animations -->
    <PreferenceScreen
        android:id="@+id/disp_anim_settings"
        android:title="@string/disp_anim_settings_title"
        android:fragment="com.android.settings.aicp.DisplayAnimationsSettings" />

    <!-- Recents panel settings -->
    <PreferenceScreen
        android:id="@+id/recents_panel_settings"
        android:title="@string/recents_panel_settings"
        android:fragment="com.android.settings.aicp.RecentsPanelSettings" />
</PreferenceScreen>
